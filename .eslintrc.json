{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "no-plusplus": [
            "error",
            { "allowForLoopAfterthoughts": true }
        ],
        "no-iterator": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2017
    }
}